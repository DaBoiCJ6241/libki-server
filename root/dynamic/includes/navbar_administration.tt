<div id="primary-navbar" class="navbar navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container">
            [% INCLUDE language_menu.tt %]
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>

            <a class="brand" href="[% c.uri_for('/') %]"><img src="[% c.uri_for('/static/images/logo-small.png') %]" />[% c.loc("navbar.title") %]</a>

            [% IF c.user_exists %]
                <div class="nav-collapse">
                    <ul class="nav">
                        <li class="[% IF active_class.search('^administration__index') %] active [% END %]">
                            <a href="[% c.uri_for('/administration/')  %]">[% c.loc("navbar.home") %]</a>
                        </li>

                        <li class="dropdown [% IF active_class.search('^administration__history|^administration__settings') %] active [% END %]">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">[% c.loc("navbar.more") %]<b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li [% IF active_class == 'administration__history' %] class="active" [% END %]><a href="[% c.uri_for('/administration/history')    %]">[% c.loc("navbar.history") %]</a></li>
                                <li [% IF active_class == 'administration__history__statistics' %] class="active" [% END %]><a href="[% c.uri_for('/administration/history/statistics') %]">[% c.loc("navbar.statistics") %]</a></li>
		                        <li class="[% IF active_class.search('^administration__hours') %] active [% END %]"><a href="[% c.uri_for('/administration/hours')  %]">[% c.loc("navbar.hours") %]</a></li>
                                [% IF c.check_user_roles('superadmin') %]
                                    <li [% IF active_class == 'administration__settings' %] class="active" [% END %]><a href="[% c.uri_for('/administration/settings') %]">[% c.loc("navbar.settings") %]</a></li>
                                [% END %]
                            </ul>
                        </li>
                    </ul>

                    <ul class="nav pull-right">
                        <li class="divider-vertical"></li>
                        <li>
                            <a href="#"><i class="icon-user"></i> [% c.user.username %]</a>
                        </li>
                        <li class="divider-vertical"></li>
                        <li>
                            <a href="[% c.uri_for('/administration/logout') %]">
                                <i class="icon-off"></i> [% c.loc("navbar.logout") %]
                            </a>
                        </li>
                    </ul>
                </div><!--/.nav-collapse -->
            [% END %]

        </div>
    </div>
</div>
