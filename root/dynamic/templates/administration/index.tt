                    <div class="control-group">
                        <label>[% c.loc("word.status") %]</label>
                        <select id="edit-user-modal-form-status" name="status">
                            <option value="enabled">[% c.loc("word.enabled") %]</option>
                            <option value="disabled">[% c.loc("word.disabled") %]</option>
